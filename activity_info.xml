<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F4F4"
    tools:context=".InfoActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="147dp"
        android:layout_marginEnd="147dp"
        android:elevation="10dp"
        android:fontFamily="@font/agbalumo"
        android:text="Woofly!"
        android:textColor="#F5788E"
        android:textSize="33sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/lexend_light"
        android:text="welcome to"
        android:textColor="#222020"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgbone"
        android:layout_width="61dp"
        android:layout_height="55dp"
        android:layout_marginTop="135dp"
        android:contentDescription="Bone icon"
        android:src="@drawable/bone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <ImageView
        android:id="@+id/imgpaw"
        android:layout_width="128dp"
        android:layout_height="277dp"
        android:contentDescription="Bone icon"
        android:src="@drawable/paw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="211dp"
        android:layout_height="103dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="3dp"
        android:fontFamily="@font/lexend_light"
        android:justificationMode="inter_word"
        android:text="Woofly is an Android application developed as part of our Application Development course. It’s designed to help pet owners capture and review photos of their pets using their device’s camera. The app uses machine learning and object detection to analyze pet moods and behaviors."
        android:textColor="#222020"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/imgpaw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="153dp"
        android:fontFamily="@font/lexend_light"
        android:text="Key features:"
        android:textColor="#222020"
        android:textSize="10sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/imgpaw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="116dp"
        android:fontFamily="@font/lexend_light"
        android:text="• Capture pet photos"
        android:textColor="#222020"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/imgpaw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="49dp"
        android:fontFamily="@font/lexend_light"
        android:text="• View a history of captured moods"
        android:textColor="#222020"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/imgpaw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="138dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="138dp"
        android:fontFamily="@font/lexend_light"
        android:text="Machine learning tools and libraries used:"
        android:textColor="#222020"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgpaw" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="89dp"
        android:layout_marginEnd="90dp"
        android:fontFamily="@font/lexend_light"
        android:text="TensorFlow Lite, Teachable Machine (by Google Creative Lab)"
        android:textColor="#222020"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="89dp"
        android:layout_marginEnd="90dp"
        android:fontFamily="@font/lexend_light"
        android:text="Woofly © 2025 • Anecka Estocado"
        android:textColor="#333131"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbone" />


</androidx.constraintlayout.widget.ConstraintLayout>