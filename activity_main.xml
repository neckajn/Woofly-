<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:fontFamily="@font/agbalumo"
        android:text="Woofly!"
        android:textColor="#FD5471"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382" />

    <ImageButton
        android:id="@+id/hisbtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="295dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="View Mood History"
        android:scaleType="fitCenter"
        android:src="@drawable/hisbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#3F3638" />

    <ImageView
        android:id="@+id/dogImage"
        android:layout_width="210dp"
        android:layout_height="160dp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="64dp"
        android:contentDescription="Dog Image"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/btncapture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.655"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="119dp"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="52dp"
        android:fontFamily="@font/lexend_light"
        android:text="For a Happier, Paw-sitive Bond"
        android:textSize="10sp"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/btncapture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btncapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="139dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="173dp"
        android:backgroundTint="@android:color/white"
        android:fontFamily="@font/lexend"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="take a photo"
        android:textColor="#FD5471"
        android:textStyle="bold"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#FD5471"
        app:strokeWidth="1.5dp" />


</androidx.constraintlayout.widget.ConstraintLayout>